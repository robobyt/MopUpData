        <Button x:Name="sendRequest" Content="Send Request" HorizontalAlignment="Left" Margin="60,267,0,0" VerticalAlignment="Top" Width="130" Height="51" FontSize="20" Click="sendRequest_Click" Grid.Column="1"/>
        <Button x:Name="post" Content="Update" HorizontalAlignment="Left" Margin="471,267,0,0" VerticalAlignment="Top" Width="130" Height="51" FontSize="20" Grid.Column="1" Click="post_Click"/>
        <TextBox x:Name="district" Grid.Column="1" HorizontalAlignment="Left" Height="31" Margin="471,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" FontSize="20"/>
        <TextBlock x:Name="textResult" HorizontalAlignment="Left" Margin="60,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="176" Width="697" Grid.ColumnSpan="2" FontSize="16"/>

    </Grid>
