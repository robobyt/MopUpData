        <Label x:Name="UserName" Content="User Name" HorizontalAlignment="Left" Margin="51,115,0,0" VerticalAlignment="Top" Width="130" FontSize="20" Foreground="#FF0EA9F1" Grid.ColumnSpan="2"/>
        <Label x:Name="Password" Content="Password" HorizontalAlignment="Left" Margin="51,164,0,0" VerticalAlignment="Top" Width="130" FontSize="20" Foreground="#FF0EA9F1" Grid.ColumnSpan="2"/>
        <Label x:Name="District" Content="District" HorizontalAlignment="Left" Margin="341,119,0,0" VerticalAlignment="Top" Width="130" FontSize="20" RenderTransformOrigin="0.495,-0.392" Foreground="#FF0EA9F1" Grid.Column="1"/>
